{
  "name": "bappo-components",
  "version": "0.1.0-alpha.138",
  "description": "Cross-platform React components for building Bappo apps",
  "keywords": [
    "bappo"
  ],
  "homepage": "https://github.com/bappogroup/bappo-components#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bappogroup/bappo-components.git"
  },
  "license": "MIT",
  "author": "Bappo",
  "files": [
    ".flowconfig",
    "es",
    "fonts",
    "fonts.gradle",
    "glyphmaps",
    "lib",
    "src"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "rimraf lib/ && BABEL_ENV=cjs babel --extensions '.js,.ts,.tsx' src/ -d lib/",
    "build:es": "rimraf es/ && BABEL_ENV=es babel --extensions '.js,.ts,.tsx' src/ -d es/",
    "build:es:watch": "rimraf es/ && BABEL_ENV=es babel --watch --extensions '.js,.ts,.tsx' src/ -d es/",
    "lint": "bappo-scripts lint",
    "test": "npm run test:web && npm run test:native",
    "test:web": "bappo-scripts test --config jest.web.config.js",
    "test:native": "bappo-scripts test --config jest.native.config.js",
    "test:cover": "bappo-scripts test --coverage",
    "test:ssr": "bappo-scripts test --config other/ssr/jest.config.js --no-watch",
    "test:update": "npm run test:cover -s -- --updateSnapshot",
    "test:ts": "tsc --noEmit -p ./tsconfig.json",
    "test:flow": "flow",
    "release-storybook": "yarn --cwd storybook/storybook-web run release",
    "prepublish": "npm run build",
    "postpublish": "npm run release-storybook",
    "validate": "bappo-scripts validate"
  },
  "dependencies": {
    "@babel/runtime": "7.5.5",
    "es6-error": "^4.1.1",
    "exenv": "^1.2.2",
    "fbjs": "^0.8.16",
    "lodash": "^4.17.10",
    "moment": "^2.19.1",
    "pdfmake": "^0.1.57",
    "prop-types": "^15.6.0",
    "react-native-keyboard-aware-scroll-view": "^0.8.0",
    "react-native-web": "^0.9.1",
    "react-recomponent": "^0.2.0",
    "react-responsive": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-transform-destructuring": "7.5.0",
    "@babel/plugin-transform-flow-strip-types": "7.4.4",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@bappo/scripts": "^1.2.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.129",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-native": "^0.60.0",
    "@types/rn-fetch-blob": "^1.2.1",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-styled-components": "^1.5.1",
    "flow-bin": "^0.82.0",
    "flow-typed": "^2.5.1",
    "git-branch-is": "^2.1.0",
    "jest-styled-components": "^6.3.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-native-pdf": "^5.1.3",
    "react-testing-library": "^7.0.0",
    "rimraf": "^2.6.2",
    "rn-fetch-blob": "^0.11.2",
    "styled-components": "3.4.10",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5",
    "yargs": "^12.0.2"
  },
  "peerDependencies": {
    "react": ">=16.8.3",
    "styled-components": ">=3.2.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is master && bappo-scripts pre-commit"
    }
  },
  "rnpm": {
    "assets": [
      "fonts"
    ]
  },
  "sideEffects": false,
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
